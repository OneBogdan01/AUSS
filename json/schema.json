{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "waves": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "weight": {
              "type": "integer"
            },
            "enemy_types": {
              "type": "array",
              "items": [
                {
                  "type": "string"
                }
              ]
            }
          },
          "required": [
            "weight",
            "enemy_types"
          ]
        }
      ]
    }
  },
  "required": [
    "waves"
  ]
}
